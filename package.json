{
	"name": "@nyambogahezron/react-toaster",
	"version": "1.0.0",
	"description": "A beautiful, animated toast notification system for React Native",
	"main": "index.ts",
	"module": "index.ts",
	"type": "module",
	"files": [
		"index.ts",
		"components/",
		"hooks/",
		"store/",
		"README.md",
		"CHANGELOG.md"
	],
	"scripts": {
		"build": "bun run tsc",
		"dev": "bun run --watch index.ts",
		"test": "bun test",
		"lint": "bun run eslint . --ext .ts,.tsx",
		"lint:fix": "bun run eslint . --ext .ts,.tsx --fix",
		"prepublishOnly": "bun run build",
		"example": "cd example && bun run start"
	},
	"keywords": [
		"react-native",
		"toast",
		"notification",
		"animated",
		"expo",
		"zustand"
	],
	"author": "nyambogahezron",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/nyambogahezron/react-toaster.git"
	},
	"dependencies": {
		"zustand": "^4.5.0"
	},
	"peerDependencies": {
		"react": ">=17.0.0",
		"react-native": ">=0.70.0",
		"react-native-reanimated": ">=3.0.0",
		"react-native-gesture-handler": ">=2.0.0",
		"react-native-safe-area-context": ">=4.0.0",
		"typescript": "^5"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/react": "^18.2.0",
		"@types/react-native": "^0.72.0",
		"@typescript-eslint/eslint-plugin": "^8.39.1",
		"@typescript-eslint/parser": "^8.39.1",
		"eslint": "^8.0.0",
		"typescript": "^5.0.0"
	}
}
